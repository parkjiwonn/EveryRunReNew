<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfile.EditUserInfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_west_24"
            android:background="#00000000"
            >

        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="프로필 수정"
            android:textColor="#ffffff">

        </TextView>

        <TextView
            android:id="@+id/tx_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="완료"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            />

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:src="@drawable/user_img"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 변경"
        android:layout_gravity="center"
        android:textColor="@color/primary"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            />

        <ToggleButton
            android:id="@+id/img_question"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/qestion_toggle"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            />

        <EditText
            android:id="@+id/et_nick"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/et_black_rounded"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="안녕"
            android:padding="5dp"
            />

        <ImageButton
            android:id="@+id/imgcheck"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="340dp"
            android:src="@drawable/ic_baseline_check_24"
            android:background="#00000000"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tx_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="warning text"
            android:textSize="15sp"
            android:textColor="#FA0606"
            android:layout_marginLeft="25dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txtBanner"
            android:layout_width="182dp"
            android:layout_height="87dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/bg_banner"
            android:gravity="center"
            android:text="한글,영문,숫자 가능\n밑줄 및 마침표만 사용가능\n최소 2자(최대10자)"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/txtBannerTail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rotate_banner_tail"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="left"
            android:layout_marginLeft="95dp"
            android:visibility="gone"
            />



    </FrameLayout>






</LinearLayout>