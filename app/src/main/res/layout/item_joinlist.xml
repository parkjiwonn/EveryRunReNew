<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tx_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:text="user 1"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/tx_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/tx_name"
        android:layout_marginLeft="10dp"
        android:text="2022년 12월 5일 신청"
        android:textColor="@color/black"

        />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tx_name"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/primary"
        android:text="수락"
        />

    <Button
        android:id="@+id/btn_deny"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btn_accept"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/inactive"
        android:text="거절"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>