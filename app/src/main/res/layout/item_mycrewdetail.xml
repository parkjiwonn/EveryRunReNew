<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="10dp"
    >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:src="@drawable/img1"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tx_reader"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tx_rounded"
            android:text="운영"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/title1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="안녕하세요안녕하세요"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/img1"
            app:layout_constraintEnd_toEndOf="parent"
            android:ellipsize="marquee"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/map1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/map"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/title1"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/area1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="모든지역"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/map1"
            app:layout_constraintTop_toBottomOf="@id/title1"
            />
        <ImageView
            android:id="@+id/crew1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/community"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/area1"
            app:layout_constraintTop_toBottomOf="@id/title1"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/current1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/crew1"
            app:layout_constraintTop_toBottomOf="@id/title1"
            android:text="10명"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />



</androidx.constraintlayout.widget.ConstraintLayout>