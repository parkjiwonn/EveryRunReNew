<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfile.HealthInfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_west_24">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="신체 정보"
            android:textColor="#ffffff"
            android:textSize="20sp">

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="신장(cm)"
        android:textColor="#3550F6"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_height"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tx_rounded_white"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="체중(kg)"
        android:textColor="#3550F6"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_weight"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tx_rounded_white"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="나의 체질량 지수(BMI)"
        android:textColor="#3550F6"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="키와 몸무게를 모두 입력해주세요."
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E1E9F8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="10dp"
            android:weightSum="4"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="저체중"
                android:textColor="@color/black"
                android:layout_weight="1.3"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="정상"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="과체중"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="비만"
                android:textColor="@color/black"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1.3"
                android:background="#039BE5"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#7CB342"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.7"
                android:background="#FFB300"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="#E53935"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="18.5"
                android:textColor="@color/black"
                android:layout_weight="1.4"
                android:gravity="right"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23"
                android:textColor="@color/black"
                android:gravity="right"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="25"
                android:textColor="@color/black"
                android:gravity="right"
                />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/primary"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="확인"
        android:textSize="18sp"
        />



</LinearLayout>